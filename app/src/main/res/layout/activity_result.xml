<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="5"
    tools:context="com.example.marwa.englishquiz.ResultActivity">

    <!-- Name of the user. -->
    <TextView
        android:id="@+id/name"
        style="@style/nameAndResult"
        tools:text="Name" />

    <!-- An image describes the feelings towards the result. -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/widthOfImage"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        app:srcCompat="@drawable/happy"
        android:contentDescription="@string/feelingsTowardsResult" />

    <!-- The result. -->
    <TextView
        android:id="@+id/result"
        style="@style/nameAndResult"
        tools:text="Result" />
</LinearLayout>
